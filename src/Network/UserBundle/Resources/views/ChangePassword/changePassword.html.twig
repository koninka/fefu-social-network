{% extends "NetworkUserBundle:EditProfile:edit.base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block title %}
    {{ 'layout.change_password'|trans }}
{% endblock %}
{% block edit_content %}
    <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password centered-form">
        {{ form_widget(form) }}
        <div class="submit-btn-box">
            <input class="btn btn-blue" type="submit" value="{{ 'change_password.submit'|trans }}" />
        </div>
    </form>
{% endblock %}
