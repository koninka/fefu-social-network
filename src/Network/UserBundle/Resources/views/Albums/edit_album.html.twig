{% extends "NetworkWebBundle:Default:profile.base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block right_content %}
    <div class="white-box" id="album-form-box">
        <form class="centered-form" action="{{ path('user_edit_album', {'albumId':album.id} ) }}" {{ form_enctype(form) }} method="POST">
            {{ form_widget(form) }}
            <div class="submit-btn-box">
                <input class="btn btn-blue" type="submit" value="{{ 'album.edit.submit'|trans }}" />
                <a class="btn btn-red" href="{{ path('user_delete_album', {'albumId':album.id} ) }}">{{ 'album.delete.name'|trans }}</a>
            </div>
        </form>
    </div>
{% endblock %}
