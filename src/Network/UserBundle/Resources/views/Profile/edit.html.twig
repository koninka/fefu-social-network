{% extends "NetworkUserBundle:EditProfile:edit.base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('bundles/sonataadmin/vendor/jqueryui/ui/minified/jquery-ui.min.js') }}"></script>
    <script src="{{ asset('bundles/networkweb/js/datepicker.js') }}"></script>
{% endblock %}

{% block title %}
    {{ 'layout.profile_edit'|trans }}
{% endblock %}

{% block edit_content %}
        <form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="centered-form fos_user_profile_edit">
            {{ form_errors(form) }}
            {{ form_widget(form) }}
            <div class="submit-btn-box">
                <input class="btn btn-blue" type="submit" value="{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}" />
            </div>
        </form>
{% endblock %}

