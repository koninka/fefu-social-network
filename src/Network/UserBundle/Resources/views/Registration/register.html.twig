{% extends "NetworkWebBundle:Default:auth.base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block authorization %}
    {{ parent() }}
    <form class="auth-form" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">
        {{ form_widget(form) }}
        {{ form_widget(form.gender, { 'attr': {'class': 'calendar'} }) }}
        <div>
            <input type="submit" class="btn btn-blue btn-auth-block" value="{{ 'registration.submit'|trans }}" />
        </div>
    </form>
    <a class="link gray block" href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
{% endblock %}
